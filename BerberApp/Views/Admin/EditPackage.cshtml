@model Package

@{
    ViewData["Title"] = "Edit Package";
    Layout = "_AdminLayout";
}

<h2>Edit Package</h2>

<form asp-action="SavePackage" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">
            @if (string.IsNullOrEmpty(Model.ImageUrl))
            {
                <span>No file chosen</span>
            }
            else
            {
                <span>Update Image</span>
            }
        </label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <img src="@Model.ImageUrl" alt="Package Image" class="img-thumbnail" style="max-width: 200px;" />
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>