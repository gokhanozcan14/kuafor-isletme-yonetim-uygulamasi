@model Staff
@{
    ViewData["Title"] = "Edit Staff";
    Layout = "_AdminLayout";
}

<h2>Edit Staff</h2>

<form asp-action="SaveStaff">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input asp-for="Surname" class="form-control"/>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpertiseAreas" class="control-label"></label>
        <select asp-for="ExpertiseAreas" class="form-control" multiple>
            @foreach (var item in ViewBag.ExpertiseAreas as List<SelectListItem>)
            {
                <option value="@item.Value" selected="@item.Selected">@item.Text</option>
            }
        </select>
        <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple options.</small>
        <span asp-validation-for="ExpertiseAreas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>